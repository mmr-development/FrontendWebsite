        <button class="close-modal" aria-label="Close modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="menu-item-content">
            <h4>{{name}}</h4>
            <p class="menu-item-price">{{price}} â‚¬</p>
            <p>{{description}}</p>
        </div>
        {{#image}}
