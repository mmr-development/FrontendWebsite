<div class="dashboard-content">
    <!-- Header Section -->
    <div class="content-header">
        <h1>{{title}}</h1>
        <div class="header-actions">
            {{#actions}}
                <button class="{{buttonClass}}" id="{{id}}">{{label}}</button>
            {{/actions}}
        </div>
    </div>
    
    <!-- Stats Cards Section -->
    <div class="stats-cards">
        {{#statsCards}}
            <div class="stats-card">
                <div class="stats-icon">
                    <i class="{{icon}}"></i>
                </div>
                <div class="stats-info">
                    <h2>{{value}}</h2>
                    <p>{{label}}</p>
                </div>
            </div>
        {{/statsCards}}
    </div>
    
    <!-- Grid Content Section -->
    <div class="grid-content">
        {{#gridItems}}
            <div class="grid-item {{sizeClass}}">
                <h2>{{title}}</h2>
                {{#hasTable}}
                    <table class="dashboard-table">
                        <thead>
                            <tr>
                                {{#tableHeaders}}
                                    <th>{{.}}</th>
                                {{/tableHeaders}}
                            </tr>
                        </thead>
                        <tbody>
                            {{#tableRows}}
                                <tr>
                                    {{#cells}}
                                        <td>{{.}}</td>
                                    {{/cells}}
                                </tr>
                            {{/tableRows}}
                        </tbody>
                    </table>
                {{/hasTable}}
                {{#hasChart}}
                    <div class="chart-container" id="{{chartId}}">
                        <!-- Chart will be rendered here by JavaScript -->
                    </div>
                {{/hasChart}}
                {{#hasContent}}
                    <p>{{content}}</p>
                {{/hasContent}}
                {{#hasActions}}
                    <div class="item-actions">
                        {{#itemActions}}
                            <button class="{{buttonClass}}" id="{{id}}">{{label}}</button>
                        {{/itemActions}}
                    </div>
                {{/hasActions}}
            </div>
        {{/gridItems}}
    </div>
</div>
