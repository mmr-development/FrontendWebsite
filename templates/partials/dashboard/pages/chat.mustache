
{{#chat_id}}
<div id="chat-messages">
</div>
<div id="send-message-form">
    <input type="file" name="file" accept="image/*,video/*,audio/*" id="file-input" style="display: none;" multiple>
    <label for="file-input" class="btn btn-secondary">
        <i class="fa fa-paperclip" aria-hidden="true"></i>
    </label>
    <input type="text" name="message" placeholder="Type a message..." required>
    <button type="submit" class="btn btn-primary">Send</button>
</div>
{{/chat_id}}
{{^chat_id}}
<div class="chat-room-empty">
    <p>No chat room selected. Please select a chat room to start chatting.</p>
</div>
{{/chat_id}}