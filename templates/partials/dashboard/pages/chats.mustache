<div class="create-chat-button">
    <button id="create-chat" class="btn btn-primary">Create New Chat</button>
</div>
{{#chats}}
<div class="chat-list-item" data-chat-id="{{id}}">
    <div class="chat-list-header">
        <span class="chat-list-name">{{name}}</span>
        <span class="chat-list-timestamp">{{timestamp}}</span>
    </div>
    <div class="chat-list-last-message">
        {{#lastMessage}}
            {{#content}}
            <span class="chat-list-message">{{text}}</span>
            {{/content}}
        {{/lastMessage}}
        {{^lastMessage}}
            <span class="chat-list-message">No messages yet</span>
        {{/lastMessage}}
    </div>
</div>
{{/chats}}
{{^chats}}
<div class="chat-list-empty">No chats available.</div>
{{/chats}}
<div id="c-modal__chat" class="c-modal"></div>